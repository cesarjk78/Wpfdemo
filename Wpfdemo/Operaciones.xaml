<Window x:Class="Wpfdemo.Operaciones"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Operaciones" Height="260" Width="380" WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <TextBlock Text="Operaciones" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,40,0,0">
            <Button Content="Ingresos" Width="160" Height="36" Margin="0,6" Click="BtnIngresos_Click"/>
            <Button Content="Salidas" Width="160" Height="36" Margin="0,6" Click="BtnSalidas_Click"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,10,0,0">
            <Button Content="Volver" Width="90" Margin="6" Click="BtnVolver_Click"/>
            <Button Content="Salir" Width="90" Margin="6" Click="BtnSalir_Click"/>
        </StackPanel>
    </Grid>
</Window>
