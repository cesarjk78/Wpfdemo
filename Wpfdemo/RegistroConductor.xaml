<Window x:Class="Wpfdemo.RegistroConductor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Registro de Conductor" Height="250" Width="350" WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel>
            <TextBlock Text="Nombre Conductor:"/>
            <TextBox x:Name="txtNombre" Width="200" Margin="0,5,0,10"/>

            <TextBlock Text="Licencia:"/>
            <TextBox x:Name="txtLicencia" Width="200" Margin="0,5,0,10"/>

            <TextBlock Text="Transporte:"/>
            <TextBox x:Name="txtTransporte" Width="200" Margin="0,5,0,20"/>

            <Button Content="Guardar" Width="100" Click="BtnGuardar_Click"/>
        </StackPanel>
    </Grid>
</Window>
