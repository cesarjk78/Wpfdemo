<Window x:Class="Wpfdemo.Ingreso"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Registro de Ingresos" Height="520" Width="600" WindowStartupLocation="CenterScreen">
    <Grid Margin="18">
        <TextBlock Text="Registro de Ingresos" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>

        <Grid Margin="0,40,0,60">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Tipo Documento:" Grid.Row="0" Grid.Column="0" Margin="0,6"/>
            <ComboBox x:Name="cbTipoDocumento" Grid.Row="0" Grid.Column="1" Margin="0,6">
                <ComboBoxItem Content="Factura"/>
                <ComboBoxItem Content="Boleta"/>
                <ComboBoxItem Content="Guía"/>
            </ComboBox>

            <TextBlock Text="Número Documento:" Grid.Row="1" Grid.Column="0" Margin="0,6"/>
            <TextBox x:Name="txtNumeroDocumento" Grid.Row="1" Grid.Column="1" Margin="0,6"/>

            <TextBlock Text="Placa:" Grid.Row="2" Grid.Column="0" Margin="0,6"/>
            <TextBox x:Name="txtPlaca" Grid.Row="2" Grid.Column="1" Margin="0,6"/>

            <TextBlock Text="Turno:" Grid.Row="3" Grid.Column="0" Margin="0,6"/>
            <ComboBox x:Name="cbTurno" Grid.Row="3" Grid.Column="1" Margin="0,6">
                <ComboBoxItem Content="Mañana"/>
                <ComboBoxItem Content="Tarde"/>
                <ComboBoxItem Content="Noche"/>
            </ComboBox>

            <TextBlock Text="Nombre Conductor:" Grid.Row="4" Grid.Column="0" Margin="0,6"/>
            <TextBox x:Name="txtNombreConductor" Grid.Row="4" Grid.Column="1" Margin="0,6"/>

            <TextBlock Text="Nombre Cliente:" Grid.Row="5" Grid.Column="0" Margin="0,6"/>
            <TextBox x:Name="txtNombreCliente" Grid.Row="5" Grid.Column="1" Margin="0,6"/>

            <TextBlock Text="Fecha:" Grid.Row="6" Grid.Column="0" Margin="0,6"/>
            <DatePicker x:Name="dpFecha" Grid.Row="6" Grid.Column="1" Margin="0,6"/>

            <TextBlock Text="Hora (HH:mm):" Grid.Row="7" Grid.Column="0" Margin="0,6"/>
            <TextBox x:Name="txtHora" Grid.Row="7" Grid.Column="1" Margin="0,6"/>

            <TextBlock Text="Peso de Ingreso (kg):" Grid.Row="8" Grid.Column="0" Margin="0,6"/>
            <TextBox x:Name="txtPeso" Grid.Row="8" Grid.Column="1" Margin="0,6"/>
        </Grid>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,10,0,0">
            <Button Content="Guardar" Width="90" Margin="6" Click="BtnGuardar_Click"/>
            <Button Content="Limpiar" Width="90" Margin="6" Click="BtnLimpiar_Click"/>
            <Button Content="Volver" Width="90" Margin="6" Click="BtnVolver_Click"/>
            <Button Content="Salir" Width="90" Margin="6" Click="BtnSalir_Click"/>
        </StackPanel>
    </Grid>
</Window>
