<Window x:Class="Wpfdemo.ListadoIngresos"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Listado de Ingresos" Height="400" Width="650" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <StackPanel>
            <!-- Filtros -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Fecha Inicio:" VerticalAlignment="Center"/>
                <DatePicker x:Name="dpInicio" Width="120" Margin="5,0"/>
                <TextBlock Text="Fecha Fin:" VerticalAlignment="Center"/>
                <DatePicker x:Name="dpFin" Width="120" Margin="5,0"/>
                <TextBlock Text="Placa:" VerticalAlignment="Center"/>
                <TextBox x:Name="txtPlaca" Width="80" Margin="5,0"/>
                <Button Content="Buscar" Width="80" Click="BtnBuscar_Click"/>
            </StackPanel>

            <!-- Tabla -->
            <DataGrid x:Name="dgIngresos" AutoGenerateColumns="False" Height="250">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Fecha" Binding="{Binding Fecha}"/>
                    <DataGridTextColumn Header="Placa" Binding="{Binding Placa}"/>
                    <DataGridTextColumn Header="Turno" Binding="{Binding Turno}"/>
                    <DataGridTextColumn Header="Conductor" Binding="{Binding Conductor}"/>
                    <DataGridTextColumn Header="Producto" Binding="{Binding Producto}"/>
                    <DataGridTextColumn Header="Peso" Binding="{Binding Peso}"/>
                    <DataGridTextColumn Header="Transporte" Binding="{Binding Transporte}"/>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>
</Window>
